@model IEnumerable<Actividad4LengProg3.Models.RecintoViewModel>

<h2>Lista de Recintos</h2>

<p><a href="/Recintos/Create" class="btn btn-primary">Agregar Recinto</a></p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>
                    <a href="/Recintos/Delete?codigo=@item.Codigo" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>